<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @brunch.name %>
</p>

<p>
  <strong>City:</strong>
  <%= @brunch.city %>
</p>

<p>
  <strong>Address:</strong>
  <%= @brunch.address %>
</p>



<button class="stateButton"><%= link_to 'Good Product', brunch_states_good_path(@brunch) %></button>
<button class="stateButton"><%= link_to 'Almost Expired Product', brunch_states_almost_exp_path(@brunch) %></button>
<button class="stateButton"><%= link_to 'Expired Product', brunch_states_expired_path(@brunch) %></button>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>category</th>
      <th>Quantity</th>
      <th>Exp date</th>
      <th>Price</th>
      <th>State</th>
      <th>Show</th>
      <th>Sale</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.category %></td>
        <td><%= product.quantity %></td>
        <td><%= product.exp_date %></td>
        <td><%= product.price %></td>
        <td><%= product.state %></td>
        <td><%= link_to  image_tag("/images/show-30x30.png", class: "img-responsive"), brunch_product_path(@brunch, product ) %></td>
        <td><%= link_to 'Sale', brunch_sale_path(@brunch, product), method: :patch %></td>
        <td><%= link_to 'Edit', edit_brunch_product_path(@brunch, product) %></td>
        <td><%= link_to 'Destroy', brunch_product_path(@brunch, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_brunch_path(@brunch) %> |
<%= link_to 'Back', brunches_path %>
<%= link_to 'New Product', new_brunch_product_path(@brunch) %>

