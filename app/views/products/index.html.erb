<p id="notice"><%= notice %></p>

<button class="stateButton"><%= link_to 'Good Product', states_good_path %></button>
<button class="stateButton"><%= link_to 'Almost Expired Product', states_almost_exp_path %></button>
<button class="stateButton"><%= link_to 'Expired Product', states_expired_path %></button>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>category</th>
      <th>Quantity</th>
      <th>Exp date</th>
      <th>Price</th>
      <th>State</th>
      <th>Show</th>
      <th>Sale</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.category %></td>
        <td><%= product.quantity %></td>
        <td><%= product.exp_date %></td>
        <td><%= product.price %></td>
        <td><%= product.state %></td>
        <td><%= link_to  image_tag("show-30x30.png", class: "img-responsive"), product %></td>
        <td><%= link_to 'Sale', sale_path(product), method: :patch %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

